<%- include('./navbar.ejs') %>
<div class="container">
    <div class="chat-container">
        <div class="chat-header">
            <h2>Nombre del Contacto</h2>
        </div>
        <div class="chat-messages">
            <div class="message sent">
                <p>Hola, ¿cómo estás?</p>
                <span class="time">10:30 AM</span>
            </div>
            <div class="message received">
                <p>¡Hola! Estoy bien, ¿y tú?</p>
                <span class="time">10:32 AM</span>
            </div>
        </div>
        <div class="chat-input">
            <input type="text" placeholder="Escribe un mensaje...">
            <button>Enviar</button>
        </div>
    </div>
    <div class="sidebar">
        <div class="contacts-container">
            <div class="contacts-header">
                <h2>Contactos</h2>
            </div>
            <div class="contact">
                <div class="avatar">A</div>
                <div class="contact-info">
                    <h3>Antonio García</h3>
                    <p>Hola, ¿cómo estás?</p>
                </div>
                <div class="contact-time">10:30 AM</div>
            </div>
            <div class="contact">
                <div class="avatar">B</div>
                <div class="contact-info">
                    <h3>Beatriz López</h3>
                    <p>¡Hola! Estoy bien, ¿y tú?</p>
                </div>
                <div class="contact-time">10:32 AM</div>
            </div>
            <div class="contact">
                <div class="avatar">C</div>
                <div class="contact-info">
                    <h3>Carlos Pérez</h3>
                    <p>Nos vemos mañana</p>
                </div>
                <div class="contact-time">9:15 AM</div>
            </div>
        </div>
        <div class="groups-container">
            <div class="groups-header">
                <h2>Grupos</h2>
                <button class="add-group">+</button>
            </div>
            <div class="group">
                <div class="avatar">G</div>
                <div class="group-info">
                    <h3>Gabrimaniacos</h3>
                    <p>Último mensaje del grupo...</p>
                </div>
                <div class="group-time">10:30 AM</div>
            </div>
            <div class="group">
                <div class="avatar">T</div>
                <div class="group-info">
                    <h3>Tech Enthusiasts</h3>
                    <p>Reunión mañana a las 9 AM...</p>
                </div>
                <div class="group-time">10:32 AM</div>
            </div>
            <div class="group">
                <div class="avatar">F</div>
                <div class="group-info">
                    <h3>Familia</h3>
                    <p>Nos vemos en la cena...</p>
                </div>
                <div class="group-time">9:15 AM</div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts opcionales de Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-afZRd1iNXm47F4xncsc5xlMcK7Ay+zAMFmLZyfc8v8NTmH/4h+2h+YGg2ywwuBgC" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/index.js"></script>
</body>
</html>
